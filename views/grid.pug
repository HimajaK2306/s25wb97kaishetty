extends layout

block content
  h1= title
  p This is the grid display page.

  if query.rows && query.cols
    p Displaying a grid of #{query.rows} rows and #{query.cols} columns:

    div.container
      each rowIndex in Array.from({ length: query.rows }, (_, i) => i)
        div.row
          each colIndex in Array.from({ length: query.cols }, (_, i) => i)
            div.col-sm-2(style="border: 1px solid black; padding: 10px; text-align: center;")
              p Grid Cell #{(rowIndex * query.cols) + colIndex + 1}

  else
    p No rows or columns specified in the query.
