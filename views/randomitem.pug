extends layout

block content
  h1= title
  p Here are some random items:

  - let image_names = ["item.jpg", "item2.jpg", "item3.jpg", "item4.jpg", "item5.jpg"]

  - for (let i = 0; i < 3; i++) {
    - let randomIndex = Math.floor(Math.random() * 5)
    img(src=`/images/${image_names[randomIndex]}`, alt=`Random Item ${randomIndex + 1}`, width="300", height="300")
  - }
