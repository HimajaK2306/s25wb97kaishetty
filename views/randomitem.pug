doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 A Random Item
    p Here are some random items:

    - var image_names = ['item1.jpg', 'item2.jpg', 'item3.jpg', 'item4.jpg', 'item5.jpg'];

    div
      - for (var i = 0; i < 3; i++)
        - var randomIndex = Math.floor(Math.random() * image_names.length);
        img(src=`/images/${image_names[randomIndex]}`, alt=`Random Item ${i+1}`, width="300", height="300", style="margin:10px; border:2px solid black;")
